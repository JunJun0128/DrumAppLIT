<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="wrap_content" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity"
    android:columnCount="6"
    android:rowCount="2"
    android:orientation="horizontal"
    android:background="@drawable/musicland">

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageButton"
        android:layout_gravity="fill"
        android:layout_column="1"
        android:layout_columnWeight="1"
        android:layout_row="0"
        android:layout_rowWeight="1"
        android:adjustViewBounds="true"
        android:src="@drawable/cymbal1"
        android:background="#00000000"
        android:scaleType="fitCenter"
        android:nestedScrollingEnabled="false"
        android:onClick="cymbal1"
        android:layout_columnSpan="1" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageButton2"
        android:layout_row="0"
        android:layout_column="2"
        android:layout_gravity="fill"
        android:layout_columnWeight="1"
        android:layout_rowWeight="1"
        android:adjustViewBounds="true"
        android:src="@drawable/tom1"
        android:onClick="tom1"
        android:scaleType="fitCenter"
        android:background="#00000000"
        android:layout_columnSpan="1" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageButton3"
        android:layout_row="0"
        android:layout_column="3"
        android:background="#00000000"
        android:layout_columnWeight="1"
        android:layout_rowWeight="1"
        android:layout_columnSpan="1"
        android:scaleType="fitCenter"
        android:onClick="tom2"
        android:src="@drawable/tom2"
        android:adjustViewBounds="true"
        android:layout_gravity="fill" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageButton4"
        android:layout_row="0"
        android:layout_column="4"
        android:background="#00000000"
        android:layout_columnWeight="1"
        android:layout_rowWeight="1"
        android:layout_columnSpan="1"
        android:scaleType="fitCenter"
        android:src="@drawable/cymbal2"
        android:onClick="cymbal2"
        android:adjustViewBounds="true"
        android:layout_gravity="fill" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageButton5"
        android:layout_row="1"
        android:layout_column="0"
        android:background="#00000000"
        android:layout_columnWeight="1"
        android:layout_rowWeight="1"
        android:layout_columnSpan="1"
        android:scaleType="fitCenter"
        android:onClick="hihat"
        android:src="@drawable/hihat"
        android:adjustViewBounds="true"
        android:layout_gravity="fill" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageButton6"
        android:layout_row="1"
        android:layout_column="1"
        android:background="#00000000"
        android:layout_columnWeight="1"
        android:layout_rowWeight="1"
        android:layout_columnSpan="1"
        android:scaleType="fitCenter"
        android:src="@drawable/snare"
        android:onClick="snare"
        android:adjustViewBounds="true"
        android:layout_gravity="fill" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageButton7"
        android:layout_row="1"
        android:layout_column="2"
        android:background="#00000000"
        android:layout_columnWeight="1"
        android:layout_rowWeight="1"
        android:layout_columnSpan="2"
        android:scaleType="fitCenter"
        android:onClick="bass"
        android:src="@drawable/bass"
        android:adjustViewBounds="true"
        android:layout_gravity="fill" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageButton8"
        android:layout_row="1"
        android:layout_column="4"
        android:background="#00000000"
        android:layout_columnWeight="1"
        android:layout_rowWeight="1"
        android:layout_columnSpan="1"
        android:scaleType="fitCenter"
        android:src="@drawable/tom3"
        android:onClick="tom3"
        android:adjustViewBounds="true"
        android:layout_gravity="fill"
        android:nestedScrollingEnabled="false" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageButton9"
        android:layout_row="1"
        android:layout_column="5"
        android:background="#00000000"
        android:layout_columnWeight="1"
        android:layout_rowWeight="1"
        android:layout_columnSpan="1"
        android:scaleType="fitCenter"
        android:src="@drawable/cymbal3"
        android:onClick="cymbal3"
        android:adjustViewBounds="true"
        android:layout_gravity="fill" />

</GridLayout>
